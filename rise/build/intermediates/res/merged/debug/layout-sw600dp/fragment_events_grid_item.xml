<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_events_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_background_ripple"
    android:clickable="true"
    android:padding="10dp" >

    <TextView
        android:id="@+id/fragment_events_event_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/color_subheader"
        android:textSize="24sp" />

    <RelativeLayout
        android:id="@+id/fragment_events_event_time_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_events_event_name_textView"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/fragment_events_event_start_time_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/color_subheader"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fragment_events_event_hyphen_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fragment_events_event_start_time_textView"
            android:fontFamily="sans-serif-medium"
            android:text=" - "
            android:textColor="@color/color_subheader"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fragment_events_event_end_time_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fragment_events_event_hyphen_textView"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/color_subheader"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/fragment_events_event_content_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_events_event_time_layout"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/color_subheader"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/fragment_events_event_create_date_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/fragment_events_event_content_textView"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/color_subheader"
        android:textSize="14sp" />

</RelativeLayout><!-- From: file:/C:/Users/ZhangY/AndroidStudioProjects/Rise/rise/src/main/res/layout-sw600dp/fragment_events_grid_item.xml -->