<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/navigation_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="178dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/navigation_drawer_header_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/navigation_drawer_userinfo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/navigation_drawer_recyclerview_header_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="name"
            android:textColor="@color/text_primary_light"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/navigation_drawer_recyclerview_header_email_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:text="email"
            android:textColor="@color/text_primary_light"
            android:textSize="14sp" />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/navigation_drawer_recyclerview_header_circleImageView"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_above="@id/navigation_drawer_userinfo_layout"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ic_action_navigation_arrow_back" />

</RelativeLayout><!-- From: file:/C:/Users/ZhangY/AndroidStudioProjects/Rise/rise/src/main/res/layout/navigation_drawer_recyclerview_header.xml -->