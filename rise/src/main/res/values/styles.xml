<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- Main theme colors -->
        <!-- your app branding color for the app bar -->

        <item name="android:textColor">@color/color_body</item>
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
    </style>

    <style name="ToolBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="actionMenuTextColor">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_primary_light</item>
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
    </style>

    <style name="FontSubheader" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/color_subheader</item>
        <item name="android:typeface">normal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="FontBody" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/color_body</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:typeface">normal</item>
    </style>

</resources>